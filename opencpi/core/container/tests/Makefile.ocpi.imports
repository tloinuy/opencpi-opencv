ALLDEFS += NEED_MAIN

TRANSFER_DRIVERS +=  $(TX_TRANSFER_LIBS)

ALLINC += $(WCI_API_EXPORTS) $(OCPIOS_EXPORTS) \
 $(UTIL_EXPORTS) \
 $(DATA_TRANSFER_EXPORTS) $(DATA_TRANSPORT_EXPORTS) \
 $(CONTAINER_EXPORTS) /opt/mercury/include/

ifeq ($(OCPI_BUILD_SHARED_LIBRARIES),0)
ifeq ($(OCPI_CROSS_HOST),ppc86xx-linux)
DYNOBJS += ../../../cp289_container/$(OCPI_OUT_DIR)/OcpiContainerDriver.obj \
	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtPioXfer.obj \
	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtPCIPioXfer.obj \
	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtSocketsXfer.obj \
	$(OCPI_BASE_DIR)/adapt/drivers/rdma/$(OCPI_OUT_DIR)/DtPPP_PioXfer.obj \
	$(OCPI_BASE_DIR)/adapt/drivers/rdma/$(OCPI_OUT_DIR)/DtPPP_DMAXfer.obj
else
DYNOBJS += ../../../cp289_container/$(OCPI_OUT_DIR)/OcpiContainerDriver.obj \
	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtPCIPioXfer.obj \
	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtPioXfer.obj

#	../../../../../core/dataplane/rdma_drivers/$(OCPI_OUT_DIR)/DtSocketsXfer.obj
endif
endif


ALLLIBS += $(CP289_CONTAINER_LIBS) $(CONTAINER_LIBS) $(DATA_TRANSPORT_LIBS) \
 $(DATA_TRANSFER_LIBS)  $(WCI_API_LIBS) $(TRANSFER_DRIVERS) \
 $(UTIL_LIBS) $(LOGGER_LIBS) $(OCPIOS_LIBS)

#FOR TEST ONLY !!
ifeq ($(OCPI_CROSS_HOST),ppc86xx-linux)
ALLLIBS +=  $(OCPI_BASE_DIR)/lib/ppp_rdma_driver \
	 $(UTIL_LIBS) $(LOGGER_LIBS) $(OCPIOS_LIBS)

BASICLIBS += -L$(OCPI_PPP_LIBRARY_DIR) -lrose -ldl

endif





